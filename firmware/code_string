	CS_LOW

	ldi ZH, high(hello_str<<1)
	ldi ZL, low(hello_str<<1)
	push ZH
	push ZL
	ldi rY, 0
str_draw:
	pop ZL
	pop ZH
	lpm tmp, Z+
	cpi tmp, 0x00
	brne cnt	; exit
	rjmp main
cnt:
	push ZH
	push ZL

	ldi ZH, high(font8x8<<1)
	ldi ZL, low(font8x8<<1)

	subi tmp, 0x20
	ldi tmp1, 0x00
	rol tmp
	rol tmp1
	rol tmp
	rol tmp1
	rol tmp
	rol tmp1
	add ZL, tmp
	adc ZH, tmp1

	ldi tmp1, 8
cdraw:
	clr lcd_x
	mov lcd_y, tmp1
	add lcd_y, rY
	rcall LCD_GotoXY
	ldi rX, 8
	
	CMD_SET
	ldi tmp, 0x2C
	rcall Send_SPI
	DATA_SET
	lpm tmp, Z+
ldraw:
	push tmp
	sbrs tmp, 0
	rjmp bit0
	ldi tmp, 0xFF
	rjmp drw
bit0:
	ldi tmp, 0x00
drw:
	rcall Send_SPI
	pop tmp
	lsr tmp
	dec rX
	brne ldraw
	
	dec tmp1
	brne cdraw

	ldi tmp, 0x08
	add rY, tmp
	rjmp str_draw